<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="@drawable/bg_gradient_blue">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/brand_text_primary" />

    <TextView
        android:id="@+id/txtModo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de usuarios"
        android:layout_marginTop="6dp"
        android:textColor="@color/brand_text_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnUsuarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuarios"
            android:textColor="@color/white"
            android:background="@drawable/button_primary" />

        <Button
            android:id="@+id/btnMaterias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Materias"
            android:textColor="@color/white"
            android:background="@drawable/button_primary" />
    </LinearLayout>

    <ListView
        android:id="@+id/listGestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Volver"
        android:textColor="@color/brand_primary"
        android:background="@drawable/button_secondary"
        android:layout_marginTop="12dp" />
</LinearLayout>
