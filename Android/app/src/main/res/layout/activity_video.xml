<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_video"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="16dp">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/video_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/video_back_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Volver"
                    android:background="@drawable/bg_button_secondary"
                    android:textColor="@color/textPrimary" />

                <Button
                    android:id="@+id/video_logout_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cerrar sesión"
                    android:background="@drawable/bg_button_danger"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="Vídeo local"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/bg_video_placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="Vídeo remoto"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/bg_video_placeholder"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="18dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control de la clase"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/video_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pulsa \"Entrar a la clase\" para activar tu cámara y conectar."
                android:textColor="@color/textSecondary"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/video_join_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entrar"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_primary" />

                <Button
                    android:id="@+id/video_retry_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reintentar"
                    android:background="@drawable/bg_button_secondary"
                    android:textColor="@color/textPrimary"
                    android:layout_marginStart="8dp"
                    android:enabled="false" />

                <Button
                    android:id="@+id/video_leave_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Finalizar"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_danger"
                    android:layout_marginStart="8dp"
                    android:enabled="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/video_room_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
